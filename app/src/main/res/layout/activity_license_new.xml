<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techsignage.techsignmeetings.LicenseNewActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/licenseinformation"
        android:padding="30dp"/>

    <ru.kolotnev.formattedittext.MaskedEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:mask="*****-*****-*****-*****-******"
        app:placeholder="_" android:id="@+id/license_Txt"
        android:layout_below="@+id/textView4"/>

    <Button
        android:id="@+id/btn_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/license_Txt"
        android:layout_centerHorizontal="true"
        android:text="@string/validate" />



</RelativeLayout>
