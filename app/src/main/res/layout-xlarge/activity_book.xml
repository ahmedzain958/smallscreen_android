                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:orientation="horizontal"
                android:id="@+id/lin2"
                android:paddingTop="30dp"
                android:layout_weight=".2">

                <android.support.v7.widget.RecyclerView
